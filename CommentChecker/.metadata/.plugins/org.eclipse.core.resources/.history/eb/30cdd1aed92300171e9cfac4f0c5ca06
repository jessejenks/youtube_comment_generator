import java.util.HashMap;

public class CommentParser {

	private String channel;
	private String comment;
	private HashMap<String, Integer> wordCount;
	// All-caps and non-caps
	private int numUppercase;
	private int numLowercase;
	// Number of period's (punctuation check) TODO do we want that?
	private int numPeriods;
	
	
	public CommentParser(String comment, String channel){
		
		this.channel = channel;
		this.comment = comment;
		
		this.wordCount = new HashMap<String, Integer>();
		this.numUppercase = 0;
		this.numLowercase = 0;
		this.numPeriods = 0;
		
		this.parseComment(comment);
	}
	
	private void parseComment(String comment){
		
		// Split the comment
		String[] data = comment.split("[\\p{Punct}\\s]+");
		
		// Start racking up word counts
		for(int i = 0; i < data.length; i++){
			
			String word = data[i];
			
		}
		
	}
}
